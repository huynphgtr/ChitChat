@page "/"

<PageTitle>Home</PageTitle>

<div class="container mx-auto p-8">
    <h1 class="text-4xl font-bold text-blue-600 mb-8">ChitChat App</h1>
    
    <div class="bg-white rounded-lg shadow-lg p-6 mb-8">
        <h2 class="text-2xl font-semibold text-gray-800 mb-4">Welcome to your new chat app!</h2>
        <p class="text-gray-600 mb-4">This app is built with Blazor and styled with Tailwind CSS.</p>
        
        <button class="btn-primary mr-4">Primary Button</button>
        <button class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
            Success Button
        </button>
    </div>
    
    <div class="chat-container max-w-md mx-auto">
        <div class="chat-header">
            <h3 class="text-lg font-semibold">Chat Demo</h3>
        </div>
        
        <div class="chat-messages">
            <div class="message-bubble message-received">
                Hello! How are you?
            </div>
            <div class="message-bubble message-sent">
                I'm doing great, thanks!
            </div>
            <div class="message-bubble message-received">
                That's wonderful to hear!
            </div>
        </div>
        
        <div class="chat-input">
            <input type="text" placeholder="Type a message..." 
                   class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
        </div>
    </div>
</div>
