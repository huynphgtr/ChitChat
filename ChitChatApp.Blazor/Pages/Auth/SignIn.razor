@page "/signin"

@using Pages.Auth
<TForm>
    <div class="flex flex-col gap-3 w-full max-w-sm mx-auto">
        <h3 class="text-pink-600 text-lg font-semibold text-center">Sign in</h3>

        <input class="input" placeholder="Email" />
        <input class="input" placeholder="Password" type="password" />

        <button class="btn-pink">Sign in</button>

        <p class="mt-2 text-sm text-center text-gray-500">
            Don’t have an account?
            <a href="/signup" class="text-pink-500 hover:underline">Sign up here</a>
        </p>
    </div>
</TForm>
