@page "/signup"
@using Pages.Auth

<TForm>
    <div class="flex flex-col gap-4 w-full max-w-sm mx-auto">
        <h3 class="text-center text-pink-600 text-lg font-semibold mb-4">Sign up</h3>

        <label class="text-sm text-pink-700">Full Name:</label>
        <input class="input" placeholder="Full Name" />

        <label class="text-sm text-pink-700">User Name:</label>
        <input class="input" placeholder="User Name" />

        <label class="text-sm text-pink-700">Email:</label>
        <input class="input" placeholder="Email" />

        <label class="text-sm text-pink-700">Password:</label>
        <input class="input" placeholder="Password" type="password" />

        <button class="btn-pink mt-4">Sign up</button>

        <p class="text-xs text-center mt-3 text-gray-500">
            Have account?
            <a href="/signin" class="text-pink-500 font-semibold hover:underline">Sign in now</a>
        </p>
    </div>
</TForm>

