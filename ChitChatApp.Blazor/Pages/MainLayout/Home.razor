    /* Tổng quan */
    html, body {
        height: 100%; /* Make sure html and body take full height */
        margin: 0;
        font-family: 'Inter', sans-serif;
        overflow: auto; /* Allow scrolling on the entire page */
        background-color: #F0F0F0;
    }

    .app-container {
        display: flex;
        flex-direction: column;
        min-height: 100vh; /* Ensure it's at least viewport height */
