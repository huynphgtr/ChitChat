        display: flex;
        flex-direction: column;
        align-items: center;
        padding-top: 10px; /* Padding top */
        border-right: 1px solid #FADAE0;
        flex-shrink: 0;
    }

    .discord-icon-wrapper {
        width: 48px; /* Kích thước icon */
        height: 48px;
        border-radius: 50%;
        background-color: #FFC0CB; /* Màu nền cho icon discord */
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 15px; /* Khoảng cách với các icon bên dưới */
    }

        .discord-icon-wrapper svg {
            color: white; /* Màu icon discord */
        }

    .icon-bar-items {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 8px; /* Khoảng cách giữa các icon */
        flex-grow: 1; /* Đẩy các icon xuống dưới */
    }

        .icon-bar-items .icon-item {
            width: 48px;
            height: 48px;
            border-radius: 50%; /* Tròn */
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #FFF0F2; /* Màu hồng nhạt */
            cursor: pointer;
            color: #FF66AA;
            transition: background-color 0.2s ease, color 0.2s ease;
        }

            .icon-bar-items .icon-item.active {
                background-color: #FF66AA;
                color: white;
                border-radius: 16px; /* Bo góc khi active */
            }

            .icon-bar-items .icon-item:hover:not(.active) {
                background-color: #F8D1DA;
            }


