        align-items: center;
        padding-top: 10px; /* Padding trên */
        border-right: 1px solid #FADAE0;
        flex-shrink: 0;
    }

    .discord-icon-wrapper {
        width: 48px; /* Kích thước icon */
        height: 48px;
        border-radius: 50%;
        background-color: #FFC0CB;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 15px;
    }

        .discord-icon-wrapper svg {
