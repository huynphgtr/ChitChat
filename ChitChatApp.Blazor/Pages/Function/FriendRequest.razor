    .discord-icon-wrapper {
        width: 48px; /* Kích thước icon */
        height: 48px;
        border-radius: 50%;
        background-color: #FFC0CB; /* Màu nền cho icon discord */
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 15px; /* Khoảng cách với các icon bên dưới */
    }

        .discord-icon-wrapper svg {
