        }

    .icon-bar-items {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 8px; /* Khoảng cách giữa các icon */
        flex-grow: 1;
    }

        .icon-bar-items .icon-item {
            width: 48px;
            height: 48px;
            border-radius: 50%; /* Tròn */
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #FFF0F2;
            cursor: pointer;
            color: #FF66AA;
            transition: background-color 0.2s ease, color 0.2s ease;
        }

            .icon-bar-items .icon-item.active {
                background-color: #FF66AA;
                color: white;
                border-radius: 16px;
            }

            .icon-bar-items .icon-item:hover:not(.active) {
                background-color: #F8D1DA;
            }


    /* Khu vực nội dung chính của thanh bên trái (cấu trúc mới) */
    .main-left-sidebar-content {
        flex: 0 0 250px; /* Chiều rộng cố định cho sidebar trái */
        background-color: #FFF0F2;
        display: flex;
        flex-direction: column;
        border-right: 1px solid #FADAE0;
        flex-shrink: 0;
    }

    /* Tiêu đề bạn bè */
    .sidebar-friends-header {
        padding: 15px 16px;
        font-weight: 600;
        font-size: 16px;
        color: #000;
        border-bottom: 1px solid #FADAE0;
        flex-shrink: 0;
    }

    /* Phần tin nhắn trực tiếp trong thanh bên trái (hiện là phần cuộn chính của sidebar này) */
    .direct-messages-list-scrollable {
        flex-grow: 1;
        overflow-y: auto;
    }

    .direct-messages-header-internal { /* Header riêng cho danh sách  */
        font-size: 11px;
        font-weight: 700;
        color: #000;
        text-transform: uppercase;
        padding: 10px 16px 5px 16px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-shrink: 0;
    }

    .friend-items-main-sidebar {
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .friend-items-main-sidebar .friend-item {
            display: flex;
            align-items: center;
            padding: 6px 16px;
            border-radius: 0px;
            cursor: pointer;
            margin-bottom: 0px;
            transition: background-color 0.2s ease;
        }

            .friend-items-main-sidebar .friend-item.active {
                background-color: #F8D1DA;
                border-left: 4px solid #FF66AA;
                padding-left: 12px;
            }

            .friend-items-main-sidebar .friend-item:hover:not(.active) {
                background-color: #F8D1DA;
            }

        .friend-items-main-sidebar .avatar {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            margin-right: 12px;
            object-fit: cover;
        }

        .friend-items-main-sidebar .friend-info {
            display: flex;
            flex-direction: column;
            overflow: hidden;
            flex-grow: 1;
        }

        .friend-items-main-sidebar .friend-name {
